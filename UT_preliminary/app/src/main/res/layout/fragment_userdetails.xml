<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/red_100"
    android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="5dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <!-- Thumbnail1 Image -->
                <ImageView
                    android:id="@+id/thumbnail1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="8dp"
                    />

                <!-- Employee Title -->
                <TextView
                    android:id="@+id/emp_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/thumbnail1"
                    android:layout_toRightOf="@+id/thumbnail1"
                    android:textSize="@dimen/name"
                    android:text="dfvrbreb rtnbtn "
                    android:textStyle="bold" />

                <!-- Email -->
                <TextView
                    android:id="@+id/emp_email1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emp_name1"
                    android:layout_marginTop="1dip"
                    android:layout_toRightOf="@+id/thumbnail1"
                    android:textSize="@dimen/email"
                    android:text="bwrbrtbrtbr brtbr rb r"/>

                <!-- Post -->
                <TextView
                    android:id="@+id/emp_post1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emp_email1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/thumbnail1"
                    android:textColor="@color/genre"
                    android:textSize="@dimen/post"
                    android:text="bsrbbb brfrb rb b fgb r vvergwvv e "/>

                <TextView
                    android:id="@+id/emp_id1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emp_post1"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/thumbnail1"
                    android:textColor="@color/genre"
                    android:textSize="@dimen/post"
                    android:text="123456789"/>


                <TextView
                    android:id="@+id/emp_status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/present"
                    android:textSize="@dimen/status"
                    />

            </RelativeLayout>

    <LinearLayout
